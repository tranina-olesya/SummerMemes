<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/background_2</item>
        <item name="colorPrimaryDark">@color/background_2</item>
        <item name="actionOverflowButtonStyle">@style/overflow_button_style</item>
    </style>

    <!-- TextFieldBoxes -->
    <style name="text_field_boxes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="panelBackgroundColor">@color/text_boxes_background</item>
        <item name="primaryColor">@color/active</item>
        <item name="secondaryColor">@color/text_boxes_color</item>
        <item name="errorColor">@color/error</item>
        <item name="helperTextColor">@color/white</item>
    </style>

    <style name="extended_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Button -->
    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@color/active</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="new_meme_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
    </style>

    <style name="new_meme_text_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="text_limit_error" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="text_limit" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/edit_text_hint</item>
    </style>

    <style name="button.simple">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/clear</item>
        <item name="android:textColor">@drawable/create_meme_button_text_color</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="toolbar_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/background_2</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:textColorSecondary">@color/active</item>
    </style>

    <style name="toolbar_popup">
        <item name="android:colorBackground">@color/background_2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="overflow_button_style" parent="android:Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_context_menu</item>
    </style>

</resources>
