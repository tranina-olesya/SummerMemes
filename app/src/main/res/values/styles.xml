<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- TextFieldBoxes -->
    <style name="text_field_boxes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="panelBackgroundColor">@color/text_boxes_background</item>
        <item name="primaryColor">@color/active</item>
        <item name="secondaryColor">@color/text_boxes_color</item>
        <item name="errorColor">@color/error</item>
        <item name="helperTextColor">@color/white</item>
    </style>

    <style name="extended_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Button -->
    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@color/active</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>
